<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender class="Log5PHP_Appender_Echo" name="default">
    <layout class="Log5PHP_Layout_Pattern">
      <param name="conversionPattern" value="%d{Y-m-d H:i:s} %-5p %c %X{username}: %m in %F at %L%n"/>
    </layout>
  </appender>
  <root>
    <level value="DEBUG"/>
    <appender_ref ref="default"/>
  </root>
</configuration>
